<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_note_title"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textNormal"
            android:textColor="@color/textBlack"
            android:layout_toRightOf="@id/cb_note_finish"
            tools:text="I am a title"
            />

        <CheckBox
            android:id="@+id/cb_note_finish"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@id/tv_note_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/note_delete"
            android:src="@drawable/note_item_ic_delete"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="24dp"
            android:layout_height="24dp"/>

        <TextView
            android:id="@+id/tv_note_time"
            android:textSize="@dimen/textNormal"
            android:layout_below="@id/tv_note_title"
            android:layout_alignLeft="@id/tv_note_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="i am a message"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>